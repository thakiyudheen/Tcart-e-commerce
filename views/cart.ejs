<%- include("./layout/layout")%>
<%- include("./partials/partials")%>
<table class="table table-hover table-light">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Quantity</th>
        <th scope="col">edit</th>
        
        
        
      </tr>
    </thead>
    <tbody>
    <% products.forEach((item,index )=> { %>
      <% item.products.forEach(pro => {%>
        
      
      <tr>
        <th scope="row"><%= index+1%></th>
        <td><img src="images/productImg/<%= pro._id %>.jpg" alt="no" style="height: 50px;width: 40px;"><%= pro.name %></td>
        <td><%= pro.price %></td>
        <td><button class="btn btn-danger" onclick="changeqty('<%= user._id %>','<%= item._id %>','<%= item.item%>',-1)">-</button>&nbsp;&nbsp;<span id="<%= item.item %>"><%= item.qty %></span>&nbsp;&nbsp;<button class="btn btn-danger" onclick="changeqty('<%= user._id %>','<%= item._id %>','<%= item.item%>',1)">+</button></td>
        <td><button class="btn btn-danger" onclick="remove('<%= item._id %>','<%= item.item %>')">remove</button> </td>

      </tr>
   <% });%>
    <% }) %>

       
      
      
      
 
    </tbody>

  </table>

